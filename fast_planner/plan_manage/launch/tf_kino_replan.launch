<launch>

  <!-- Is odometry ground truth? -->
  <arg name="ground_truth" default="false"/>

  <!-- topic of your odometry such as VIO or LIO -->
  <!-- <arg name="odometry_topic" default="/vins_estimator/odometry" unless="$(arg ground_truth)"  /> -->
   <!-- <arg name="odometry_topic" default="/odom" if="$(arg ground_truth)" />  -->
  <arg name="odometry_topic" default="/iris_ground_truth" if="$(arg ground_truth)" />

  <!-- size of map, change the size in x, y, z according to your application -->
  <arg name="map_size_x" default="150.0"/>
  <arg name="map_size_y" default="150.0"/>
  <arg name="map_size_z" default="3.0"/>

  <!-- camera pose: transform of camera frame in the world frame -->
  <!-- depth topic: depth image, 640x480 by default -->
  <!-- don't set cloud_topic if you already set these ones! -->
  <arg name="camera_pose_topic" default="/camera_pose"/>
  <arg name="depth_topic" default="/camera/depth/image_raw"/>

  <!-- topic of point cloud measurement, such as from LIDAR  -->
  <!-- don't set camera pose and depth, if you already set this one! -->
  <arg name="cloud_topic" default="/pcl_render_node/cloud"/>

  <!-- intrinsic params of the depth camera -->
  <arg name="cx" default="320"/>
  <arg name="cy" default="240"/>
  <arg name="fx" default="347.997568216904"/>
  <arg name="fy" default="347.997568216904"/>

  <!-- maximum velocity and acceleration the drone will reach -->
  <arg name="max_vel" default="0.5" />
  <arg name="max_acc" default="0.25" />
  <arg name="dt_yaw" default="0.5" />

  <!-- 1: use 2D Nav Goal to select goal  -->
  <!-- 2: use global waypoints below - UNSUPPORTED  -->
  <arg name="flight_type" default="1" />

  <!-- The topic of the waypoint goal to navigate to -->
  <!-- <arg name="goal_waypoint_topic" default="/anchor_waypoints" /> --> 
  <arg name="goal_waypoint_topic" default="/move_base_simple/goal" />

  <!-- TODO: choose weather you follow global navigation or not -->

  <!-- main algorithm params -->
  <arg name="config_file" default="tf_kino_algorithm.xml"/>

  <!-- optimization params -->
  <arg name="lambda1" default="10.0" />
  <arg name="lambda2" default="0.8" />
  <arg name="lambda3" default="0.01" />
  <arg name="lambda4" default="0.1" />
  <arg name="lambda7" default="1" />
  <arg name="dist0" default="0.7" />

  <!-- Extended launch file -->
  <include file="$(find plan_manage)/launch/config/$(arg config_file)" >
    <arg name="odometry_topic" value="$(arg odometry_topic)"/>
    <arg name="map_size_x" value="$(arg map_size_x)"/>
    <arg name="map_size_y" value="$(arg map_size_y)"/>
    <arg name="map_size_z" value="$(arg map_size_z)"/>
    <arg name="camera_pose_topic" value="$(arg camera_pose_topic)"/>
    <arg name="depth_topic" value="$(arg depth_topic)"/>
    <arg name="cloud_topic" value="$(arg cloud_topic)"/>
    <arg name="cx" value="$(arg cx)"/>
    <arg name="cy" value="$(arg cy)"/>
    <arg name="fx" value="$(arg fx)"/>
    <arg name="fy" value="$(arg fy)"/>
    <arg name="max_vel" value="$(arg max_vel)" />
    <arg name="max_acc" value="$(arg max_acc)" />
    <arg name="flight_type" value="$(arg flight_type)" />
    <arg name="goal_waypoint_topic" value="$(arg goal_waypoint_topic)" />
    <arg name="dt_yaw" value="$(arg dt_yaw)" />
    <arg name="lambda1" value="$(arg lambda1)" />
    <arg name="lambda2" value="$(arg lambda2)" />
    <arg name="lambda3" value="$(arg lambda3)" />
    <arg name="lambda4" value="$(arg lambda4)" />
    <arg name="lambda7" value="$(arg lambda7)" />
    <arg name="dist0" value="$(arg dist0)" />

  </include>

</launch> 